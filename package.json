  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "lite-server": "^2.5.3",
    "mongoose": "^5.5.15",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
